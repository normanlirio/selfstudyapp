<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RadioGroup
                    android:id="@+id/radioGroup_adj_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RadioButton
                        android:checked="true"
                        android:id="@+id/radio_i_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="い-Adjective" />

                    <RadioButton
                        android:id="@+id/radio_na_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="な-Adjective" />
                </RadioGroup>

                <EditText
                    android:visibility="gone"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:id="@+id/editText_adj_edit_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Japanese Word:"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <EditText
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:id="@+id/editText_adj_edit_japaneseWord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="English Word:"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <EditText
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:id="@+id/editText_adj_edit_englishWord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Hiragana/Katakana"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <EditText
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:id="@+id/editText_adj_edit_hirakata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Kanji"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <EditText
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:id="@+id/editText_adj_edit_kanji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Negative"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <EditText
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:id="@+id/editText_adj_edit_negative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Past"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <EditText
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:id="@+id/editText_adj_edit_past"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Past Negative"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <EditText
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:id="@+id/editText_adj_edit_pastnegative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/button_adj_edit_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@color/cancelGrey"
                    android:text="Cancel"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/button_adj_edit_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/japanRed"
                    android:text="Save"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>