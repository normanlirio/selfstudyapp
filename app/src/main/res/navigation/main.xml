<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    app:startDestination="@+id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.teamzmron.selfstudyapp.ui.Fragments.Home"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/nounList"
        android:name="com.teamzmron.selfstudyapp.ui.Fragments.noun.NounHomeFragment"
        android:label="@string/nounHomeList"
        tools:layout="@layout/fragment_noun_home" />

    <fragment
        android:id="@+id/verbList"
        android:name="com.teamzmron.selfstudyapp.ui.Fragments.verb.VerbHomeFragment"
        android:label="@string/verbHomeList"
        tools:layout="@layout/fragment_verb_home" />

    <fragment
        android:id="@+id/adjList"
        android:name="com.teamzmron.selfstudyapp.ui.Fragments.Adjective.AdjectiveHomeFragment"
        android:label="@string/adjHomeList"
        tools:layout="@layout/fragment_adjective_home" />

    <fragment
        android:id="@+id/nounAdd"
        android:name="com.teamzmron.selfstudyapp.ui.Fragments.noun.NounAddFragment"
        android:label="@string/add_noun"
        tools:layout="@layout/fragment_add_noun" />
    <fragment
        android:id="@+id/verbAdd"
        android:name="com.teamzmron.selfstudyapp.ui.Fragments.verb.VerbAddFragment"
        android:label="@string/add_verb"
        tools:layout="@layout/fragment_add_verb" />
    <fragment
        android:id="@+id/adjAdd"
        android:name="com.teamzmron.selfstudyapp.ui.Fragments.Adjective.AdjectiveAddFragment"
        android:label="@string/add_adj"
        tools:layout="@layout/fragment_add_adjective" />
    <fragment
        android:id="@+id/nounEdit"
        android:name="com.teamzmron.selfstudyapp.ui.Fragments.noun.NounEditFragment"
        android:label="@string/edit_noun"
        tools:layout="@layout/fragment_add_adjective" />

</navigation>